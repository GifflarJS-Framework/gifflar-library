{
  "name": "gifflar",
  "version": "1.0.0",
  "description": "A smart contract generator framework for IoT.",
  "main": "index.js",
  "scripts": {
    "test": "echo Unit Testing && npm run testunit && echo Functional Testing && npm run testfunc",
    "testunit": "./node_modules/mocha/bin/mocha test/unit/**/*",
    "testfunc": "./node_modules/mocha/bin/mocha test/functional/**/*",
    "docs": "jsdoc -c jsdoc-config.json",
    "postinstall": "link-module-alias"
  },
  "_moduleAliases": {
    "@models": "./src/modules/models",
    "@writers": "./src/modules/writers",
    "@compiler": "./src/modules/compiler",
    "@deployer": "./src/modules/deployer",
    "@iot": "./src/modules/iot",
    "@manager": "./src/modules/manager",
    "@validation": "./src/modules/validation",
    "@utils": "./src/utils",
    "@examples": "./test/examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/lif-uesc/gifflar.git"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "solidity",
    "internet",
    "of",
    "things"
  ],
  "author": "Levy Santiago",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/lif-uesc/gifflar.git/issues"
  },
  "homepage": "https://gitlab.com/lif-uesc/gifflar.git#readme",
  "devDependencies": {
    "better-docs": "^2.0.1",
    "jsdoc-mermaid": "^1.0.0",
    "link-module-alias": "^1.2.0",
    "mocha": "^7.1.2"
  },
  "dependencies": {
    "solc": "^0.4.23"
  }
}
